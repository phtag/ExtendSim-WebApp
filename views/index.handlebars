<div id="home">
  <div class="container">
    <div class="row">
      <header id="ExtendSim-header">
      </header>
    </div>
    <div class="row">
      <div class="col-8 offset-2">
        <h2>ExtendSim Simulation Scenario Login Page</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">Username</label>
            <input type="text" id="username-text" class="form-control" aria-describedby="example-text" placeholder="Enter username">
          </div>
          <div class="form-group">
            <label for="password-text">Password</label>
            <input type="password" id="password-text" class="form-control" aria-describedby="password-text"></textarea>
          </div>
          <button id="submit-login-info" class="btn btn-primary float-right">Submit</button>
        </form>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">Scenario</label>
            <input type="text" id="scenario-name-text" class="form-control" aria-describedby="example-text" placeholder="Enter scenario name">
          </div>          
          <button id="submit-simulation-scenario" class="btn btn-primary float-right">Submit simulation scenario</button>
        </form>
        <h3>Results:</h3>
        <label for="scenario-id">Scenario ID:</label>
        <output name="scenario_id" id="scenario-id"></output>
        <br>
        <label for="scenario-folder-pathname">Scenario folder path:</label>
        <output name="scenario_folder_path" id="scenario-folder-pathname"></output>

        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
